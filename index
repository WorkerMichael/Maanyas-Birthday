<script>
  const steps = document.querySelectorAll(".step");
  let current = 0;

  const nextBtn = document.getElementById("next");
  const backBtn = document.getElementById("back");
  const resultBox = document.getElementById("result");

  function getVal(name){
    const el = document.querySelector(`input[name="${name}"]:checked`);
    return el ? el.value : "";
  }

  function showStep(){
    steps.forEach((s,i)=>s.classList.toggle("active",i===current));
    backBtn.disabled = current === 0;
    nextBtn.textContent = current === steps.length-1 ? "Restart â†º" : "Next â†’";
  }

  nextBtn.onclick = ()=>{
    if(current === steps.length-1){
      location.reload();
      return;
    }
    current++;
    if(current === steps.length-1){
      const plan =
`ğŸ’— Maanyaâ€™s Birthday Plan ğŸ’—
â€¢ Food: ${getVal("food")}
â€¢ First: ${getVal("first")}
â€¢ End: ${getVal("end")}

Approved by the birthday queen ğŸ˜ŒğŸ’—`;
      resultBox.textContent = plan;
    }
    showStep();
  };

  backBtn.onclick = ()=>{
    if(current>0){current--; showStep();}
  };

  function copyPlan(){
    navigator.clipboard.writeText(resultBox.textContent);
    alert("Copied ğŸ’—");
  }

  function sendPlan(){
    const sms = `sms:&body=${encodeURIComponent(resultBox.textContent)}`;
    window.location.href = sms;
  }

  showStep();
</script>
